<h1>Login</h1>

<div class="row form-group">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <p><%= f.email_field :email, class: 'form-control', placeholder: "username" %></p>
      <p><%= f.password_field :password, class: 'form-control', placeholder: "password" %></p>

      <%= f.submit "Log In", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>